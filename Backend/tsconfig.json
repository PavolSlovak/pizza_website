{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",

    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "strict": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*"], // Adjust if needed
  "exclude": ["node_modules", "dist"]
}
